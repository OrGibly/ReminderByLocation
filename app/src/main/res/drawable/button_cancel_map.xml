<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/colorMapButtonFill"/>
                    <stroke android:color="@color/colorMapCancelButton"
                        android:width="5dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_clear_red_24dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp"
                android:left="7dp"/>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/colorMapButtonFill"/>
                    <stroke android:color="@color/colorMapCancelButton"
                        android:width="5dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_clear_red_24dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp"
                android:left="7dp"/>
        </layer-list>
    </item>

</selector>