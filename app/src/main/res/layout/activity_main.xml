<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.reminderbylocation.MainActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorTabLayoutBackground"
        android:elevation="3dp"
        android:paddingBottom="1dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorTabSelected"
        app:tabIndicatorHeight="3dp"
        app:tabMaxWidth="0dp"
        app:tabSelectedTextColor="@color/colorTabSelected"
        app:tabTextAppearance="@style/MyCustomTabText"
        app:tabTextColor="@color/colorTabUnselected">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alerts" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map" />

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabLayout"
        android:layout_marginTop="45dp">

    </android.support.v4.view.ViewPager>

</FrameLayout>